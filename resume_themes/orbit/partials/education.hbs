{{#if resume.education}}
    <div class="education-container container-block">
        <h2 class="container-block-title">Education</h2>
        {{#resume.education}}
            <div class="item">
                <h4 class="degree">{{award studyType}}
                    {{#if area}}
                        in {{area}}
                    {{/if}}
                </h4>
                <h5 class="meta">{{institution}}</h5>
                <div class="d-flex justify-content-between">
                    <div class="time">{{Y startDate}} 
                        {{#if endDate}}
                            - {{Y endDate}}
                        {{else}}
                            - Current
                        {{/if}} 
                    </div>
                    {{#if score}}<h5 class="meta">{{score}}</h5>{{/if}}
                </div>
                
            </div><!--//item-->
        {{/resume.education}}
    </div><!--//education-container-->
{{/if}}
